<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('.forgot_your_password'), new_password_path(resource_name), data:{ modal: true } %><br />
<% end %>
<hr>
<%- if controller_name != 'sessions' %>
  <%= t('.have_already_an_account') %> <%= link_to t('.login'), login_path, data: { modal: true } %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= t('.no_account_yet') %> <%= link_to t('.sign_up'), new_user_path, data: { modal: true } %><br />
  <br>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('.didnt_receive_confirmation_instructions'),
                 new_confirmation_path(resource_name),
                 data: { modal: true } %><br />
<% end -%>
