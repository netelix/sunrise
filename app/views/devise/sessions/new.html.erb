<% content_for :dialog_class, 'authentication-modal' %>
<% content_for :title, t('.title') %>
<div class='new_session row justify-content-center text-center'>
  <%= render 'shared/flashes' %>
  <%= image_tag('logo.png', class:'my-2 w-50 img-fluid' ) %>
  <div class='col-10'>
    <%= form_for(resource,
                 as: resource_name,
                 url: session_path(resource_name),
                 remote: true,
                 authenticity_token: true,
                 html: { class:'text-left py-2', data: { modal: true } }) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: :email%>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('.password') %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class='custom-control custom-checkbox'>
            <%= f.check_box :remember_me, class: 'custom-control-input', checked: true %>
            <%= f.label :remember_me, class: 'custom-control-label' %>
          </div>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit t('.login'), class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
