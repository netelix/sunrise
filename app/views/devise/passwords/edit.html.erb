<% content_for :extra_meta_tags do %>
  <meta name="robots" content="noindex, nofollow">
<% end %>

<div class='new_session row justify-content-center my-5'>
  <div class='col-10 col-sm-8 col-md-5 col-lg-4'>
    <h2 class="text-center mb-4"><%= t('.title') %></h2>
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="actions mt-3">
        <%= f.submit t('.save'), class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
