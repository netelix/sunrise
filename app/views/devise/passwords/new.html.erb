<% content_for :title, t('.title') %>
<div class='new_password row justify-content-center text-center'>
  <div class='col-10'>
    <%= render 'shared/flashes' %>

    <%= image_tag('logo.png', class:'my-2 w-50 img-fluid' ) %>
    <%= form_for(resource,
                 as: resource_name,
                 url: password_path(resource_name),
                 html: { method: :post, class:'text-left py-2' },
                 data: {modal: true},
                 remote: true) do |f| %>

      <div class="form-group">
        <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: :email %>
      </div>

      <div class="actions">
        <%= f.submit t('.send_me_password_instructions'), class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>