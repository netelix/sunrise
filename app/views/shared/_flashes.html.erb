<% if flash[:notice] %>
  <div
    class="notice alert alert-success alert-dismissible fade show"
    role="alert"
    style='text-align: center;'>
    <%= flash[:notice].html_safe %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<% if flash[:alert] %>
  <div
    class="notice alert alert-danger alert-dismissible fade show w-100"
    role="alert"
    style='text-align: center;'>
    <%= flash[:alert].html_safe %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<div
  class='js_flash'
  data-flash="<%= flash.to_h.to_json %>"
  style='display: none;'></div>
